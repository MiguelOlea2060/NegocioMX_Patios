<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Espaciador superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp" />

        <!-- Logo de la empresa -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_transvision"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo Transvision International" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Vehículo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa los datos del vehículo"
            android:textSize="14sp"
            android:textColor="#E3F2FD"
            android:layout_marginBottom="24dp" />

        <!-- Card contenedor del formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Campo VIN -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtVIN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="VIN (17 caracteres)"
                        android:inputType="textCapCharacters"
                        android:maxLength="17"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_info_details"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Motor -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMotor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Número de Motor"
                        android:inputType="textCapCharacters"
                        android:maxLength="14"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_preferences"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Marca -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerMarca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar Marca"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Modelo -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerModelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar Modelo"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Año -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtAnio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Año (ej: 2024)"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_recent_history"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Transmisión -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerTransmision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar Transmisión"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_manage"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Dirección -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar Dirección"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_compass"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Versión -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Versión del Vehículo"
                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_menu_edit"
                        android:drawableTint="#1565C0"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Botón Cancelar -->
                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="CANCELAR"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:background="@drawable/button_secondary"
                        android:elevation="2dp" />

                    <!-- Botón Guardar -->
                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="GUARDAR"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_primary"
                        android:elevation="4dp"
                        android:drawableLeft="@android:drawable/ic_menu_save"
                        android:drawableTint="@android:color/white"
                        android:drawablePadding="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Espaciador inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp" />

        <!-- Texto de estado -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:background="#33000000"
            android:padding="8dp"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>
