<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/blue_white_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblNombreDispositivoAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imgDetallesDispositivoAcceso"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/ver_detalles_a_64x64" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/lblEmpresaDispositivoAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa de dispositivo"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgActivoDispositivoAcceso"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icono_on_50x24" />

                <TextView
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/lblCantLogueosDispositivoAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>