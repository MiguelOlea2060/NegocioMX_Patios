<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".articulo_nube_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#61FC0B"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgFotoEncArticuloNube"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/logo1_articulo_150x150" />

        <TextView
            android:id="@+id/lblEncabezadoAltaArticuloNube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Alta de Articulo" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imgNuevoArticuloAltaNube"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="7dp"
            app:srcCompat="@drawable/agregar_icono_64x64" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imgGuardarArticuloNube"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="7dp"
            app:srcCompat="@drawable/save_14949" />

        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/pbGuardarArticuloNube"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="7dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imgRegresarArticuloAltaNube"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="4dp"
            app:srcCompat="@drawable/regresar_icono_64x64" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNombreArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginRight="3dp"
                android:text="Nombre:" />

            <EditText
                android:id="@+id/txtNombreArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="1000"
                android:inputType="text"
                android:text=""
                android:tooltipText="Nombre del Articulo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16dp"
                android:id="@+id/lblCodigoBarraArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Codigo barra:" />

            <EditText
                android:id="@+id/txtCodigoBarraArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:inputType="text"
                android:maxLength="15"
                android:text=""
                android:tooltipText="Nombre del Articulo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblPrecioVentaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:text="Precio venta:" />

            <EditText
                android:id="@+id/txtPrecioVentaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:text=""
                android:tooltipText="Nombre del Articulo" />

            <TextView
                android:id="@+id/lblExistenciaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="16dp"
                android:text="Existencia:" />

            <EditText
                android:id="@+id/txtExistenciaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text=""
                android:tooltipText="Existencia inicial" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="U. Medida:"
                android:layout_marginRight="5dp"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:id="@+id/lblUnidadMedidaAltaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:id="@+id/cmbUnidadMedidaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Categoria:"
                android:layout_marginRight="5dp"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:id="@+id/lblCategoriaAltaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_marginRight="5dp"
                android:id="@+id/cmbCategoriaArticuloNube"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgAgregaNuevaCategoriaAltaNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                app:srcCompat="@android:drawable/ic_input_add" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblStatusArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Status: " />
            <Spinner
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/cmbStatusArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblFotoArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:text="Foto" />

            <ImageView
                android:id="@+id/imgFotoArticuloNube"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/sinfoto_360x360"
                android:text="" />

            <Button
                android:id="@+id/btnTomarFotoArticuloNube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Tomar Foto" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>