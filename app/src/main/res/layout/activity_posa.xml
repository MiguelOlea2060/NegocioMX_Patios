<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posa_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/blue_white_normal"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnRegresarVentaPOS"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/regresar_icono_64x64" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/lblEncDatosPOS"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@color/black"
                    android:text="Datos de Venta"
                    android:textColor="@color/white"
                    android:paddingLeft="2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblFolioVentaPOS"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/black"
                    android:text="Folio: NV-1526"
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnGuardarVentaPOS"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/save_14949" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblClientePOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Cliente:"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/cmbClientePOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblImpuestoPOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Impuesto:"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/cmbImpuestoPOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/blue_white"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblClaveCodigoNombrePOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:textStyle="bold"
                    android:text="Clave o Codigo:" />

                <EditText
                    android:id="@+id/txtClaveCodigoNombreArticuloPOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imgBuscarPOS"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icono_buscar_blue_64x64" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/imgAgregaNuevoArticuloPOS"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/agregar_icono_64x64" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@color/botonverde"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblIvaVentaPOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IVA: $1,500"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:layout_marginRight="9dp"
                android:textAlignment="textEnd"
                android:id="@+id/lblTotalVentaPOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $1,500"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblEncListaArticuloPOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:text="Lista de Articulo"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArticulosVentaPOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>