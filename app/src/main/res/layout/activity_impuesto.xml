<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".impuesto_activity">
    <LinearLayout
        android:id="@+id/llEncabezadoImpuesto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imgEncImpuesto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            app:srcCompat="@drawable/logo_categoria_100x100" />

        <TextView
            android:id="@+id/lblEncabezadoImpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="Impuesto" />

        <ImageView
            android:src="@drawable/save_14949"
            android:id="@+id/btnGuardarImpuesto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"/>

        <ImageView
            android:src="@drawable/regresar_icono_64x64"
            android:id="@+id/btnRegresarImpuesto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llEncabezadoImpuesto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNombreImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="Nombre:" />

            <EditText
                android:hint="Nombre"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:drawableLeft="@drawable/baseline_contacts_24"
                android:drawablePadding="10dp"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"

                android:id="@+id/txtNombreImpuesto"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="30"
                android:inputType="text"
                android:text=""
                android:tooltipText="Nombre de Impuesto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblClaveImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Clave:" />

            <EditText
                android:hint="Clave"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:drawablePadding="10dp"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"
                android:maxLength="4"
                android:id="@+id/txtClaveImpuesto"
                android:layout_width="100dp"
                android:text="" />

            <TextView
                android:id="@+id/lblTasaImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:text="Tasa:" />

            <EditText
                android:hint="Tasa"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:drawablePadding="10dp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="10dp"
                android:maxLength="5"
                android:inputType="number"
                android:layout_height="38dp"
                android:id="@+id/txtTasaImpuesto"
                android:layout_width="100dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chkActivoImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginRight="5dp"
                android:text="Activa" />

            <CheckBox
                android:id="@+id/chkPredeterminadoImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginRight="5dp"
                android:text="Predeterminada" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImpuesto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>