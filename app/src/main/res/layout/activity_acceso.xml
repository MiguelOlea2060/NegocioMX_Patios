<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">
    <!-- Inicio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Espaciador superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="0dp" />

        <!-- Logo de la empresa -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_automoviles1" />

        <!-- Título de bienvenida -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________________________"
            android:textSize="20sp"
            android:textColor="@color/primary_auto_light"
            android:layout_marginBottom="6dp" />

        <!-- Card contenedor del formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <!-- Título del formulario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesión"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_auto"
                    android:layout_gravity="center"
                    android:layout_marginBottom="26dp" />

                <!-- Campo Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_auto"
                    app:hintTextColor="@color/primary_auto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtUsuarioEmailAcceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo Electrónico"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_dialog_email"
                        android:drawableTint="@color/primary_auto"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeColor="@color/primary_auto"
                    app:hintTextColor="@color/primary_auto"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/primary_auto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtContrasenaAcceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:textColor="@color/accent_auto"
                        android:padding="16dp"
                        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                        android:drawableTint="@color/primary_auto"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Checkbox Recordar -->
                <CheckBox
                    android:id="@+id/chkRecordarAcceso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recordar mis credenciales"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:buttonTint="@color/primary_auto"
                    android:layout_marginBottom="28dp"
                    android:padding="8dp" />

                <!-- Botón Login -->
                <Button
                    android:id="@+id/btnIngresarAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="INICIAR SESIÓN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:elevation="4dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@android:drawable/ic_menu_send"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp" />

                <!-- Texto Registro -->
                <TextView
                    android:id="@+id/lblRegistrarUsuarioAcceso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes cuenta? Regístrate aquí"
                    android:textSize="14sp"
                    android:textColor="@color/accent_auto"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@android:drawable/ic_menu_add"
                    android:drawableTint="@color/accent_auto"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Espaciador inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="40dp" />

        <!-- Footer con información de la empresa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoLogística Terrestre"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almacenamiento y Movimiento de Automóviles"
                android:textSize="12sp"
                android:textColor="@color/primary_auto_light" />

        </LinearLayout>

        <!-- Texto de estado -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:background="#33000000"
            android:padding="8dp"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>
