<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/blue_white_normal"
        android:id="@+id/lblEncCantidadCantidad"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="Seleccione  "
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblCantidadCantidad"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:text="Cantidad: "
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number"
            android:id="@+id/txtCantidadCantidad"
            android:textSize="24dp"
            android:text="1"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnSumarCantidad"
                android:layout_marginBottom="15dp"
                android:src="@drawable/sumar_icono_64x64"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

            <ImageView
                android:id="@+id/btnRestarCantidad"
                android:src="@drawable/restar_icono_64x64"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblPrecioVentaCantidad"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:text="Precio de venta: "
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:textAlignment="textEnd"
            android:inputType="numberDecimal"
            android:id="@+id/txtPrecioVentaCantidad"
            android:textSize="24dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/deep_blue"
        android:layout_height="3dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:text="Aceptar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnAceptarCantidad"
        android:src="@drawable/aceptar_icono_64x64"
        android:layout_width="wrap_content"
        android:layout_height="55dp"/>
    <Button
        android:text="Cancelar"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnCancelarCantidad"
        android:src="@drawable/aceptar_icono_64x64"
        android:layout_width="wrap_content"
        android:layout_height="55dp"/>
    </LinearLayout>
</LinearLayout>