<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categoria_activity">

    <LinearLayout
        android:id="@+id/llEncabezadoCategoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="1dp"
            app:srcCompat="@drawable/logo_categoria_100x100" />

        <TextView
            android:id="@+id/lblEncabezadoCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="Categoria" />

        <ImageView
            android:src="@drawable/agregar_icono_64x64"
            android:id="@+id/btnNuevaCategoriaAlta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:text="Guardar" />
        <ImageView
            android:src="@drawable/save_14949"
            android:id="@+id/btnGuardarCategoria"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="Guardar" />
        <ImageView
            android:src="@drawable/regresar_icono_64x64"
            android:id="@+id/btnRegresarCategoria"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:text="Guardar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llEncabezadoCategoria">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="Nombre:" />

            <EditText
                android:hint="Nombre"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:drawableLeft="@drawable/baseline_contacts_24"
                android:drawablePadding="10dp"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"

                android:id="@+id/txtNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="25"
                android:inputType="text"
                android:text=""
                android:tooltipText="Nombre de Categoria" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chkActivaCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginRight="5dp"
                android:text="Activa" />

            <CheckBox
                android:id="@+id/chkPredeterminadaCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginRight="5dp"
                android:text="Predeterminada" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblFotoCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:text="Foto" />

            <ImageView
                android:id="@+id/imgFotoCategoria"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/sinfoto_360x360"
                android:text="" />

            <Button
                android:id="@+id/btnTomarFotoCategoria"
                android:backgroundTint="@color/blue_white_normal"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Tomar Foto" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnCerrarCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/botonverde"
                    android:text="Cerrar" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>