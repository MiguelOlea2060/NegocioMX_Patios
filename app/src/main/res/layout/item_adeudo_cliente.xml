<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:id="@+id/lblEncAdeudoCliente"
            android:background="@color/blue_normal_deep"
            android:text="Detalles de Cliente"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/regresar_icono_64x64"
            android:id="@+id/btnRegresarAdeudoCliente"
            android:layout_width="55dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Cliente: Martin Ruiz Peña"
            android:id="@+id/lblNombreClienteAdeudoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:textAlignment="textEnd"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Total de Adeudo: $ 1,500"
            android:id="@+id/lblTotalAdeudoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="Fecha ult. actualización: "
            android:id="@+id/lblFechaUltActualizacionAdeudoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/blue_white_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:padding="7dp"
            android:layout_marginRight="10dp"
            android:id="@+id/lblEncPagoAdeudoCliente"
            android:background="@color/black"
            android:text="Detalles del Pago"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:src="@drawable/save_14949"
            android:id="@+id/btnGuardarPagoAdeudoCliente"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:text="Monto del pago:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txtMontoPagoAdeudoCliente"
                android:textAlignment="textEnd"
                android:textSize="22dp"
                android:maxLength="10"
                android:layout_weight="1"
                android:hint="Monto del pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblTipoPagoAdeudoCliente"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:text="Tipo de pago:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/cmbTipoPagoAdeudoCliente"
                android:textAlignment="textEnd"
                android:layout_marginRight="8dp"
                android:textSize="22dp"
                android:maxLength="10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/deep_blue"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="20dp"
            android:text="Lista de Pagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaPagosAdeudoCliente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>