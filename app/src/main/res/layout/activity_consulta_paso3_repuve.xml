<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="4dp"
    tools:context=".ConsultaPaso3Repuve_Activity">

    T√≠tulo
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="üìä Consultas Paso 3 - REPUVE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:background="@color/naranja_ligero"
        android:padding="6dp"
        android:layout_marginBottom="16dp" />

    Secci√≥n de Filtros
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="üìÖ Seleccionar Fecha"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        Secci√≥n compacta de fecha
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvFechaSeleccionada"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Fecha"
                android:textSize="16sp"
                android:textColor="#424242"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@android:drawable/ic_menu_today"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="üîç Buscar"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    Estad√≠sticas
    <LinearLayout
        android:id="@+id/layoutEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/info_background"
        android:padding="8dp"
        android:layout_marginBottom="14dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvVehiculosUnicos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="üöó 0 veh√≠culos"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalFotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="üì∏ 0 fotos"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="center" />

    </LinearLayout>

    Loading
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="14dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateTint="#2196F3" />

        <TextView
            android:id="@+id/tvLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Consultando registros Paso 3..."
            android:textSize="16sp"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/tvLoadingSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Filtrando por fecha seleccionada"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    Lista de Resultados
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRegistros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="5dp"
        tools:listitem="@layout/item_consulta_paso3" />

    Mensaje Sin Resultados
    <LinearLayout
        android:id="@+id/layoutSinResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="üì≠"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se encontraron registros"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMensajeSinResultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="para la fecha seleccionada"
            android:textSize="14sp"
            android:textColor="#999999" />

    </LinearLayout>

</LinearLayout>